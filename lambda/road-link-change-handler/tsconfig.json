{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}